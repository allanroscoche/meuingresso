<!doctype html>
<html>
  <head>
    <meta charset='utf-8' />
    <%= wicked_pdf_stylesheet_link_tag "pdf" %>
    <%= wicked_pdf_javascript_include_tag "number_pages" %>
    </head>
  <body>
    <div id="header">

    </div>
    <div id="content">
<% i = 0 %>
<% for ingresso in @ingressos %>
  <% barcode = Barby::Code128B.new(ingresso.code) %>
  <div class="ingresso" >
    <div class="date"><%= ingresso.created_at %></div>
    <img class="codebar" width="400" class="figure" src="data:image/svg+xml;base64,<%= Base64.encode64(barcode.to_svg) %>"></img>
    <div class="texto"><%= ingresso.tipo.nome %></div>
    <div class="code"><%= ingresso.code %></div>
  </div>
  <% i += 1 %>
  <% if i >= 3 then %>
    <div class="page-break"></div>
    <% i=0 %>
  <% end %>
<% end %>
</div>
</body>
</html>

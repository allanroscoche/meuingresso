<!doctype html>
<html>
  <head>
    <meta charset='utf-8' />
    <%= wicked_pdf_stylesheet_link_tag "pdf" %>
    <%= wicked_pdf_javascript_include_tag "number_pages" %>
    </head>
  <body onload='number_pages'>
    <div id="header">

    </div>
    <div id="content">
<% i = 0 %>
<% for ingresso in @ingressos %>
  <div class="ingresso" >
    <div class="texto">
      <div class="id"><%= ingresso.id %> | <%= ingresso.tipo.nome %></div>
      <div class="nome"></div>
      <div class="date"><%= ingresso.created_at %></div>
    </div>
  </div>
  <% i += 1 %>
  <% if i >= 3 then %>
    <div class="page-break"></div>
    <% i=0 %>
  <% end %>
<% end %>
</div>
</body>
</html>
